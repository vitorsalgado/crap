<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Crime Map</title>
	<link rel='icon' type='image/x-icon' href='/static/images/favicon.ico' />
	@Styles.Render("~/css/map")
</head>
<body>
	<div id="fb-root"></div>
	<div class="navbar navbar-default navbar-top">
		<div class="container">
			<div class="navbar-header">
				<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target=".navbar-collapse">
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>
				<a class="navbar-brand" href="/">Crime Map</a>
			</div>
			@RenderSection("nav", required: false)
			<div class="collapse navbar-collapse pull-right">
				<ul class="nav navbar-nav">
					<li><a href="/">Home</a></li>
					@Html.Action("Nav", "Home")
				</ul>
			</div>
		</div>
	</div>

	<div class="clearfix"></div>

	@RenderBody()

	<div class="clearfix"></div>

	<footer>
		<p>© Crime Map - 2015</p>
	</footer>

	@using (Html.BeginForm("SignOut", "Account", FormMethod.Post, new { id = "headerSignOutForm" })) {
		@Html.AntiForgeryToken()
	}

	<script src="http://maps.googleapis.com/maps/api/js?v=3.exp&libraries=places"></script>
	@Scripts.Render("~/js/core")
	@RenderSection("scripts", required: false)
</body>
</html>
